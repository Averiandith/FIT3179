{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width":300,
  "height": 400,
  "background": "#ffe4e1",
  "data": {"url": "https://raw.githubusercontent.com/Averiandith/FIT3179/main/assignment_playground/Dataset/2019.csv"},
  "title": "Economy vs Health",
  "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "x": {
          "field": "Economy GDP",
          "type": "quantitative",
          "title": "Economy"
        },
        "y": {
          "field": "Life Expectancy",
          "type": "quantitative",
          "title": "Health"
        },
        "color": {
          "field": "Region", 
          "type": "nominal", 
          "scale": {"scheme": "category10"}
        },
        "shape": {"field": "Region", "type": "nominal"}
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "firebrick"
      },
      "transform": [
        {
          "regression": "Economy GDP",
          "on": "Life Expectancy"
        }
      ],
      "encoding": {
        "x": {
          "field": "Economy GDP",
          "type": "quantitative",
          "title": "Economy"
        },
        "y": {
          "field": "Life Expectancy",
          "type": "quantitative",
          "title": "Health"
        }
      }
    }
  ],
  "params": [
      {
          "name": "Region_Selection",
          "bind": {
              "input": "select",
              "options": [
                  null,
                  "Africa",
                  "Arab States",
                  "Asia & Pacific",
                  "Europe",
                  "Middle East",
                  "North America",
                  "South/Latin America"
              ],
              "labels": [
                  "Show All",
                  "Africa",
                  "Arab States",
                  "Asia & Pacific",
                  "Europe",
                  "Middle East",
                  "North America",
                  "South/Latin America"
              ],
              "name": "Region Selection: "
          }
      },
      {
        "name": "Rank_Selection",
        "value": 50,
        "bind": {
          "input": "range",
          "min": 1,
          "max": 156,
          "step": 1,
          "name": "Rank Slider (Inclusive): "
        }
      }
  ],
  "transform": [
      {"filter": "Region_Selection == null || Region_Selection == datum.Region"},
      {"filter": "datum.Rank <= Rank_Selection"}
  ],
  "encoding": {
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "Region", "type": "nominal", "title": "Region"},
      {"field": "Rank", "type": "quantitative", "title": "Rank"},
      {"field": "Score", "type": "quantitative", "title": "Score"},
      {"field": "Economy GDP", "type": "quantitative", "title": "Economy"},
      {"field": "Social Support", "type": "quantitative", "title": "Social Support"},
      {"field": "Life Expectancy", "type": "quantitative", "title": "Health"},
      {"field": "Freedom", "type": "quantitative", "title": "Freedom"},
      {"field": "Generosity", "type": "quantitative", "title": "Generosity"},
      {"field": "Trust In Government", "type": "quantitative", "title": "Trust In Government"}
    ]
  } 
}
